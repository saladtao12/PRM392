<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F5F5F5">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🎉 Kết quả"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <!-- Image (centered) -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ketqua"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:layout_marginBottom="16dp" />

    <!-- Result Card (Simplified) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/result_card_background"
        android:padding="20dp"
        android:elevation="4dp"
        android:layout_marginBottom="24dp">

        <!-- Subject -->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/subjectTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Môn học:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/subjectValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geography"
                android:textSize="16sp"
                android:textColor="#FF6F61" />
        </LinearLayout>

        <!-- Overall Points -->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/pointsTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tổng Điểm:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/pointsValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="227"
                android:textSize="16sp"
                android:textColor="#FF9800" />
        </LinearLayout>

        <!-- Date -->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ngày:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/dateValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09 Dec 2020 01:33 PM"
                android:textSize="16sp"
                android:textColor="#FF6F61" />
        </LinearLayout>
    </LinearLayout>

    <!-- Start Again Button -->
    <Button
        android:id="@+id/start_again_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="START AGAIN!"
        android:textStyle="bold"
        android:backgroundTint="#FF6F61"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="12dp" />
</LinearLayout>
